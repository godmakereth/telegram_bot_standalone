# 檔案：.env.example
# --- Telegram API & User Account ---
API_ID=YOUR_API_ID
API_HASH=YOUR_API_HASH
# --- User Session ---
PHONE_NUMBER=+YOUR_PHONE_NUMBER
SESSION_NAME=userbot
# --- App Configuration ---
# 您的控制群組 ID
CONTROL_GROUP=YOUR_CONTROL_GROUP_ID
# 授權可以操作的使用者 User ID (用逗號分隔)
ADMIN_USERS=USER_ID_1,USER_ID_2,USER_ID_3
# 預設要推播的目標頻道/群組，用逗號分隔
TARGET_CHANNELS=TARGET_GROUP_ID_1,TARGET_GROUP_ID_2
# --- 廣播設定 ---
BROADCAST_DELAY=2
MAX_RETRIES=3
BATCH_SIZE=10
# --- 其他設定 ---
DATABASE_URL=sqlite:///userbot.db
TIMEZONE=Asia/Taipei